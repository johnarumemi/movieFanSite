<!DOCTYPE html>
<html>
  <%# inject template for head here here %>
  <% include head %>
<body>

<%# inject template for navbar here %>
<% include navbar %>

<div class="container">
  <div class="row">
    <div class="col-sm-12">
      <h1>Now Playing</h1>
    </div>
    <div class="col-sm-12">
      <%# we have access to locals.parsedData array%>
      <% locals.parsedData.forEach((movie) => { %>
        <% if( movie.poster_path){ %>
        <div class="col-md-3 col-sm-4 poster">
            <a href="/movie/<%= movie.id %>"><img src="<%= locals.imageBaseUrl + movie.poster_path %>" /></a>
        </div>
        <% } %>
      <% }) %>
    </div>
  </div>
</div>
</body>
</html>
